<form method="POST" action="/cards/destroy/confirm">
    <div class="container-fluid">
        <input type="hidden" name="cardkey" value="{{#if card}}{{cardkey}}{{/if}}">
        <p class="form-text">Are you sure to delete the card: {{cardkey}} ?</p>
        <div class="btn-group">
            <button type="submit" value="Delete" class="btn btn-outline-danger">Delete</button>
            <a class="btn btn-outline-dark" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>
